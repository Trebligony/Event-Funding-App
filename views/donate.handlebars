<br><br><br>
<div class="container px-3 py-3">
  <h2 class="pb-2 border-bottom text-center">Pay via Debit/Credit card</h2>
  
  <h5 id="card-errors" style="padding:15px; margin-left:15px; color:red" role="alert"></h5>
</div>
<div class="container bg-light col-xl-10 col-xxl-8 px-4 py-3 border rounded-3">
  <div class="row align-items-center g-lg-5 py-2 ">
    <form class="form signup-form" action="/payment" method="POST">
      <div class="row">
        <div class="col-xs-12 col-sm-3 mb-3">
          <input type="text" name="name" class="form-control" placeholder="Name*" required>
        </div>
        <div class="col-xs-12 col-sm-6 mb-3">
          <input type="email" name="email" class="form-control" placeholder="Email*" required>
        </div>
        <div class="col-xs-12 col-sm-3 mb-3">
          <input type="number" name="amount" class="form-control" placeholder="Amount*" value="{{donation_amt}}" required>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-9">
          <div id="card-element" class="form-control" style="padding:15px;"></div>
        </div>
        <div class="col-xs-12 col-sm-3">
          <a href=""></a><button class="btn btn-lg btn-primary w-100" type="submit">SUBMIT DETAILS</button></a>
        </div>
      </div>
    </form>
  </div>
</div><br><br>

<script src="https://js.stripe.com/v3/"></script>
<script src="./js/donate.js"></script>