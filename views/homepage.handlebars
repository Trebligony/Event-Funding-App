<!-- Recent Projects -->
<div class="container px-3 py-3">
  <h2 class="pb-2 border-bottom text-center">Recent Projects</h2>
</div>
<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="container bg-light col-xl-10 col-xxl-8 px-4 py-3 border rounded-3">
  <div class="row align-items-center g-lg-5 py-2 ">
    <div class="col-lg-8 text-center text-lg-start">
      <h3 class="display-6 fw-bold lh-1 mb-3">{{{get_emoji}}}<a href="/project/{{project.id}}"></a>{{project.name}}</h3>
      <p class="col-lg-12 fs-4">{{project.description}}</p>
      <a href="/project/{{project.id}}"><button class="btn  btn-primary" type="button">More Details</button></a>
    </div>
    <div class="col-md-10 mx-auto col-lg-4">
      <form class="p-4 p-md-4 border rounded-3 bg-white">
        <div class="form-floating mb-2">
          <input type="text" class="form-control" id="need" disabled value="{{format_amount project.needed_funding}}">
          <label for="need">Required fund ($):</label>
        </div>
        <div class="form-floating mb-2">
          <input type="text" class="form-control" id="created" disabled value="{{project.user.name}}">
          <label for="created">Created by: </label>
        </div>
        <div class="form-floating mb-2">
          <input type="text" class="form-control" id="created" disabled value="{{format_date project.date_created}}">
          <label for="created">Created on: </label>
        </div>
      </form>
    </div>
  </div>
</div>
<br>
{{/each}}
