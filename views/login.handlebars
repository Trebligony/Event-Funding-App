<br><br>
<div class="container col-xl-10 col-xxl-8 px-4 py-3">
  <div class="row align-items-center g-lg-5 py-2 ">
    <div class="col-lg-7 text-center text-lg-start">
      <form class="p-4 p-md-5 border rounded-3 bg-light signup-form">
        <div class="form-floating mb-3">
          <input type="text" class="form-control"  id="name-signup" placeholder="John Smith" required>
          <label for="name-signup">Name</label>
        </div>
        <div class="form-floating mb-3">
          <input type="email" class="form-control" id="email-signup" placeholder="name@example.com" required>
          <label for="email-signup">Email</label>
        </div>
        <div class="form-floating mb-3">
          <input type="password" class="form-control" id="password-signup" placeholder="Password" required>
          <label for="password-signup">Password</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Create an account</button>
      </form>
    </div>
    <div class="col-md-10 mx-auto col-lg-5">
      <form class="p-4 p-md-5 border rounded-3 bg-light login-form">
        <br><br>
        <div class="form-floating mb-3">
          <input type="email" class="form-control" id="email-login" placeholder="name@example.com" required>
          <label for="email-login">Email</label>
        </div>
        <div class="form-floating mb-2">
          <input type="password" class="form-control" id="password-login" placeholder="Password" required>
          <label for="password-login">Password</label>
        </div>
        <div class="checkbox mb-2">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>